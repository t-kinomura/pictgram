<div class="comments-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.label :comment %>
            <%= f.text_area :text, class: 'form-control' %>
          </div>
          <%= f.hidden_field :topic_id, :value => @topic_id %>
          <%= f.submit '送信', class: 'btn btn-black btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
