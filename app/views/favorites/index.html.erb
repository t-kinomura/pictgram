<div class="topic-index-wrapper">
  <div class="container">
    <h1 class="favorite-page-title">My Favorite Topics</h1>
    <% @favorite_topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <% if topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_destroy_path(topic_id: topic.id), method: :post do %>
                <%= image_tag 'icons/heart-red.png', class: 'topic-index-icon' %>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <%= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
              <% end %>
            <% end %>
            <%= topic.favorite_users.count %>
            <%= link_to comments_path(topic_id: topic.id) do %>
              <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <% end %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <h3>コメント</h3>
            <% if topic.comments.any? %>
              <ul class="comments">
                <% topic.comments.each do |comment| %>
                  <li>
                    <%= comment.text %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
